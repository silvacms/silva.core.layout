<ul id="breadcrumbs"
    tal:define="trail context/@@absolute_url/breadcrumbs">
  <li tal:repeat="step trail">
    <tal:block tal:define="is_first repeat/step/start; is_last repeat/step/end">
    <a tal:content="step/name"
       tal:attributes="href step/url;
                       title step/name;
                       class python:is_first and 'first' or is_last and 'last' or None" />
    <span class="breadcrumb-separator"
	  tal:condition="not: is_last">/</span>
    </tal:block>
  </li>
</ul>
